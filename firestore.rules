rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Config: Publicly readable (or auth only), No write
    match /config/pricing {
      allow read: if request.auth != null;
      allow write: if false; // Only via Admin SDK
    }

    // Vendor Data: Vendor can read ONLY their own data
    match /vendors/{vendorId} {
      // Allow read if the user is authenticated and their UID matches the vendorId
      allow read: if request.auth != null && request.auth.uid == vendorId;
      allow write: if false; // Only via Admin SDK

      match /customers/{customerId} {
        allow read: if request.auth != null && request.auth.uid == vendorId;
        allow write: if false;
      }

      match /transactions/{transactionId} {
        allow read: if request.auth != null && request.auth.uid == vendorId;
        allow write: if false;
      }
    }
  }
}
